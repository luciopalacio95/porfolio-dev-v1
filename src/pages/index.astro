<Layout 
	title="Porfolio de Lucio Palacio - FullStack Developer"
	description="Experiencia y profesionalismo en un mismo lugar."
>
	<main class="px-4">
		<SectionContainer class="py-44 pb-36">
			<Hero>
			</slot>
		  </Hero>
		</SectionContainer>
		<div class="space-y-24">

		<SectionContainer id="experiencia">
			<TitleSection>
				<BriefcaseIcon class="size-8" />
