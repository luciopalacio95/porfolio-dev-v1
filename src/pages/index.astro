			</TitleSection>
			<Experience />
		</SectionContainer>
		<SectionContainer id="proyectos" class="pb-20">
			<TitleSection>
				<CodeIcon class="size-7" />
				Proyectos
				</TitleSection>
			<Projects />
		</SectionContainer>
		<SectionContainer id="sobre-mi">
			<TitleSection>
			  <ProfileCheck class="size-8" />
